<%- include('includes/head2.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css">
</head>
<body style="margin-left: 1in;">
    <h1>Welcome to Babai Hotel</h1>
    <h2>Welcome to signup page</h2>
    <form action="/signup" method="POST">
        <div style="margin-left: 1in;">
            <div><input type="text" id= "name" name = "name" placeholder="Name" required></div>
            <div><input type="text" id= "number" name = "number" placeholder="Number" required></div>
            <div><input type="text" id= "role" name = "role" placeholder="Role" required></div>
            <div><input type="text" id= "address" name = "address" placeholder="Address" required></div>
            <div><input type="password" id= "password" name = "password" placeholder="Password" required></div>
            <div><input type="password" id= "password2" name = "password2" placeholder="Confirm Password" required></div>
            <div><br><button type="submit">Submit</button></div>
        </div>
    </form>
    <ul>
        <% if (typeof errors != 'undefined') {%> <% errors.forEach(error=>{%>
            <li><%= error.message %></li>
            <%})%> <% }%>
    </ul>
    <div style="margin-left: 1in;"><p>Already a User? <a href="/login"><button>Log in</button></a></p></div>
    
<%- include('includes/end.ejs') %>